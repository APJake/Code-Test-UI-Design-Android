<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeTestUIDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name= "AppTheme" parent= "Theme.CodeTestUIDesign" >
        <item name= "android:textViewStyle" > @style/EncodeSansTextViewStyle </item>
        <item name= "android:editTextStyle" > @style/EncodeSansEditTextStyle </item>
        <item name= "android:imageButtonStyle" > @style/EncodeSansImageButtonStyle </item>
        <item name= "android:radioButtonStyle" > @style/EncodeSansRadioButtonStyle </item>
        <item name= "android:buttonStyle" > @style/EncodeSansButtonStyle </item>
    </style>
    <style name= "EncodeSansTextViewStyle" parent= "android:Widget.TextView" >
        <item name= "android:fontFamily">@font/encode_sans</item>
    </style>
    <style name= "EncodeSansEditTextStyle" parent= "android:Widget.EditText" >
        <item name= "android:fontFamily">@font/encode_sans</item>
    </style>
    <style name= "EncodeSansImageButtonStyle" parent= "android:Widget.ImageButton" >
        <item name= "android:fontFamily">@font/encode_sans</item>
    </style>
    <style name= "EncodeSansRadioButtonStyle" parent= "android:Widget.CompoundButton.RadioButton" >
        <item name= "android:fontFamily">@font/encode_sans</item>
    </style>
    <style name= "EncodeSansButtonStyle" parent= "android:Widget.Button" >
        <item name= "android:fontFamily">@font/encode_sans</item>
    </style>
    <style name= "CustomTabBarTextStyle" >
        <item name= "android:fontFamily">@font/encode_sans</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textFontWeight">700</item>
    </style>
</resources>